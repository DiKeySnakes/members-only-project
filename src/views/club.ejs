<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body>
    <%- include("./partials/nav.ejs") %>
    <div class="blogs content">
      <h2>Messages</h2>

      <% if (messages.length > 0) { %> <% messages.forEach(message => { %>
      <a class="single" href="/message/<%= message._id %>">
        <h3 class="title"><%= message.title %></h3>
        <p class="snippet"><%= message.body %></p>
        <hr />
        <p><strong>Written by <%= message.user.username %></strong></p>
        <p class="snippet"><%= message.createdAt %></p>
      </a>
      <% }) %> <% } else { %>
      <p>There are no messages to display...</p>
      <% } %>
    </div>
    <%- include("./partials/footer.ejs") %>
  </body>
</html>
